<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:OmniArt.Views"
             x:Class="OmniArt.AppShell">

    <TabBar>
        
        <Tab Title="Create Galleries">
            <ShellContent Title="Enter Gallery Information" ContentTemplate="{DataTemplate views:GalleryFormPage}"/>
        </Tab>


        <Tab Title="Galleries">
            <ShellContent Title="Upcoming" ContentTemplate="{DataTemplate views:UpcomingGalleriesPage}"/>
            <ShellContent Title="Ongoing" ContentTemplate="{DataTemplate views:OngoingGalleriesPage}"/>
            <ShellContent Title="Previous" ContentTemplate="{DataTemplate views:PreviousGalleriesPage}"/>
        </Tab>

    </TabBar>

</Shell>
